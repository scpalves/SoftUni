<h1>Delete Film</h1>
<section>
    <form action="/delete/{{film.id}}" method="POST">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" value="{{film.name}}" name="name" disabled />
            <label for="genre">Genre</label>
            <input type="text" id="genre" value="{{film.genre}}" name="genre" disabled />
            <label for="director">Director</label>
            <input type="text" id="director" value="{{film.director}}" name="director" disabled />
            <label for="year">Year</label>
            <input type="text" id="year" value="{{film.year}}" name="year" disabled />
            <button type="submit" class="accept">Delete</button>
            <button type="button" class="cancel" onclick="location.href='/'">Cancel</button>
        </div>
    </form>
</section>